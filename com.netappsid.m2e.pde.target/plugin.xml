<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.netappsid.m2e.pde.loadTarget"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="com.netappsid.m2e.pde.target.LoadMavenTargetAction"
               enablesFor="1"
               id="com.netappsid.m2e.pde.loadTarget"
               label="Load PDE Target"
               menubarPath="org.eclipse.m2e.core.mavenMenu/update">
         </action>
         <visibility>
            <objectState
                  name="nature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </objectState>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.netappsid.m2e.pde.loadTarget"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="com.netappsid.m2e.pde.target.SaveMavenTargetAction"
               enablesFor="1"
               id="com.netappsid.m2e.pde.saveTarget"
               label="Save/Update PDE Target File (Resolve workspace artifacts)"
               menubarPath="org.eclipse.m2e.core.mavenMenu/update"
               tooltip="Save/Updates an existing PDE target file and 2 folders for all opened workspace projects: MAVEN dependencies in other plugins will not be deleted once the update is performed again">
         </action>
         <visibility>
            <objectState
                  name="nature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </objectState>
         </visibility>
      </objectContribution>
        <objectContribution
            adaptable="true"
            id="com.netappsid.m2e.pde.loadTarget"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="com.netappsid.m2e.pde.target.SaveMavenTargetActionWithSources"
               enablesFor="1"
               id="com.netappsid.m2e.pde.saveTarget"
               label="Save/Update PDE Target File and Sources (Resolve workspace artifacts)"
               menubarPath="org.eclipse.m2e.core.mavenMenu/update"
               tooltip="Save/Updates an existing PDE target file and 3 folders for all opened workspace projects: MAVEN dependencies in other plugins will not be deleted once the update is performed again">
         </action>
         <visibility>
            <objectState
                  name="nature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </objectState>
         </visibility>
      </objectContribution>
      
       <objectContribution
            adaptable="true"
            id="com.netappsid.m2e.pde.loadTarget"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="com.netappsid.m2e.pde.target.SaveStandaloneMavenTargetAction"
               enablesFor="1"
               id="com.netappsid.m2e.pde.saveTarget"
               label="Save/Update PDE Target File (Ignore workspace artifacts)"
               menubarPath="org.eclipse.m2e.core.mavenMenu/update"
               tooltip="Save/Updates an existing PDE target file and 2 folders for a single project: MAVEN dependencies in other plugins will not be deleted once the update is performed again">
         </action>
         <visibility>
            <objectState
                  name="nature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </objectState>
         </visibility>
      </objectContribution>
      
        <objectContribution
            adaptable="true"
            id="com.netappsid.m2e.pde.loadTarget"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="com.netappsid.m2e.pde.target.GenerateS3ReleasePlatformAction"
               enablesFor="1"
               id="com.netappsid.m2e.pde.generateS3ReleasePlatform"
               label="Generate S3 Release Platform"
               menubarPath="org.eclipse.m2e.core.mavenMenu/update"
               tooltip="Generate S3 plastform from saved PDE_TARGET_Plugins and PDE_TARGET_OtherPlugins folders">
         </action>
         <visibility>
            <objectState
                  name="nature"
                  value="org.eclipse.m2e.core.maven2Nature">
            </objectState>
         </visibility>
      </objectContribution>
   </extension>

</plugin>
